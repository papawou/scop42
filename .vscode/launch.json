    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'scop42'",
            "cargo": {
                "args": [
                    "+nightly",
                    "build",
                    "--bin=scop42",
                    "--package=scop42"
                ],
                "filter": {
                    "name": "scop42",
                    "kind": "bin"
                },
                "environment": [
                    {
                        "name": "PATH",
                        "value": "${env:PATH};${workspaceFolder}\\lib\\nsight-aftermath\\lib\\x64"
                    }
                ],
            },
            "env": {
                "PATH": "${env:PATH};${workspaceFolder}\\lib\\nsight-aftermath\\lib\\x64"
            },
            "args": [],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'scop42'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=scop42",
                    "--package=scop42"
                ],
                "filter": {
                    "name": "scop42",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}